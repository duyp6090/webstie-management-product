//- Entend default layout
extend ../../layouts/default.pug

//- fillter status block
include ../../mixin/fillter-status.pug

//- search block
include ../../mixin/search.pug

//- pagination Page
include ../../mixin/pagination.pug

//- Form change status
include ../../mixin/form-delete-restore.pug

//- Delete and restore
include ../../mixin/delete-restore.pug

//- Sort target product
include ../../mixin/sort-target.pug


block main 
    h1 Danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row
                .col-6 
                    +fillter-status(fillterStatus)
                .col-6
                    +search(searchFind)
    .card.mb-3 
        .card-header Sắp xếp 
        .card-body 
            .row 
                .col-4 
                    +sort-target(typeSort)

    .card.mb-3
        .card-header Danh sách
        .card-body
            .row 
                .col-6
                    //- form change status
                    +form-delete-restore(`/${prefixAdmin}/products/delete-restore?_method=PATCH`)
                .col-6 
                    //- back to products page
                    a(href="/admin/products" class="btn btn-primary") Quay lại trang sản phẩm

            //- table products
            table.table.table-hover.table-sm 
                thead 
                    tr 
                        th 
                            input(
                                type="checkbox"
                                name="check-all"
                            )
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in products
                        tr 
                            th 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value=item._id
                                )
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail, alt="" width="100px" height="auto")
                            td #{item.title}
                            td #{item.price}
                            td
                                if (item.availabilityStatus == 'No Stock')
                                    a(
                                        href="javascript:;"
                                        data-status="inactive"
                                        data-id=item._id
                                        button-change-status
                                        class="btn btn-danger"
                                    ) Dừng hoạt động
                                else 
                                    a(
                                        href="javascript:;"
                                        data-status="active"
                                        data-id=`${item._id}`
                                        button-change-status
                                        class="btn btn-success"
                                    ) Hoạt động
                            td
                                +delete-restore(item)
    +paginationPages(paginations)


    //- form delete
    form(
        action=""
        method="POST"
        id="form-delete-forever-product"
        data-path=`/${prefixAdmin}/products/delete-forever`
        class = "d-none"
    )

    //- form restore
    form(
        action=""
        method="POST"
        id="form-restore-product"
        data-path=`/${prefixAdmin}/products/restore`
        class = "d-none"
    )
    //- link script
    script(src="/admin/js/product/productTrash.js" type="module")