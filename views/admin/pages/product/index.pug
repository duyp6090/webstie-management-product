extend ../../layouts/default.pug

block main 
    h1 Danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body 
            .row
                .col-6 
                    each item in fillterStatus
                        button(class=`btn btn-sm ml-1 btn-outline-success ${item.class}` button-status= item.status) #{item.name}
                .col-6
                    form(id="search-form" method="GET")
                        .input-group.mb-3
                            input(type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="search" value=searchFind)
                            .input-group-append
                                button(type="submit" class="btn btn-primary") Tìm kiếm

    table.table.table-hover.table.table-sm 
        thead 
            tr 
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        tbody
            each item, index in products
                tr 
                    td #{index + 1}
                    td 
                        img(src=item.thumbnail, alt="" width="100px" height="auto")
                    td #{item.title}
                    td #{item.price}
                    td
                        if (item.availabilityStatus == 'No Stock')
                            a(href="#" class="btn btn-danger") Hết hàng
                        else 
                            a(href="#" class="btn btn-success") Hoạt động
                    td
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1") Xóa