extends ../../layouts/default.pug

block main 
    h1 #{title}

    //- form create product
    form(
        action=`/${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
        id='form-updated-product'
        method='POST'
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Nhập tiêu đề"
                value = product.title
            ) 

        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                type="text"
                class="form-control"
                id="desc"
                name="desc"
                placeholder="Nhập mô tả"
            )  #{product.description}

        div(class="form-group")
            label(for="category") Danh mục
            input(
                type="text"
                class="form-control"
                id="category"
                name="category"
                placeholder="Nhập danh mục cách nhau bởi dấu phẩy vd: abc, xyz"
                value = product.category
            )

        div(class="form-group")
            label(for="price") Gía
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                min="0"
                step="0.01"
                placeholder="Nhập giá sản phẩm"
                value = product.price
            )

        div(class="form-group")
            label(for="discount") Giảm giá(%)
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discount"
                min="0"
                step="0.01"
                placeholder="Nhập % giả giá"
                value = product.discountPercentage
            )

        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                min = "0"
                step="0.01"
                placeholder="Nhập số lượng sản phẩm"
                value = product.stock
            )

        div(class="form-group")
            label(for="tags") Thẻ liên quan
            input(
                type="text"
                class="form-control"
                id="tags"
                name="tags"
                placeholder="Nhập thẻ liên quan, ví dụ: adbc, xyz"
                value = product.tags.toString()
            )

        div(class="form-group")
            label(for="brand") Thương hiệu
            input(
                type="text"
                class="form-control"
                id="brand"
                name="brand"
                placeholder="Nhập thương hiệu"
                value = product.brand
            )

        div(class="form-group")
            label(for="sku") Mã sku
            input(
                type="text"
                class="form-control"
                id="sku"
                name="sku"
                placeholder="Nhập mã SKU"
                value = product.sku
            )

        div(class="form-group")
            label(for="weight") Khối lượng
            input(
                type="number"
                class="form-control"
                id="weight"
                name="weight"
                min="0"
                step="0.01"
                placeholder="Nhập khối lượng sản phẩm"
                value = product.weight
            )

        div(class="form-group")
            label(for="height") Chiều cao
            input(
                type="number"
                class="form-control"
                id="height"
                name="height"
                min="0"
                step="0.01"
                placeholder="Nhập chiều cao sản phẩm"
                value = product.dimensions.height
            )

        div(class="form-group")
            label(for="width") Chiều rộng
            input(
                type="number"
                class="form-control"
                id="width"
                name="width"
                min="0"
                step="0.01"
                placeholder="Nhập chiều rộng sản phẩm"
                value = product.dimensions.width
            )

        div(class="form-group")
            label(for="depth") Chiều sâu
            input(
                type="number"
                class="form-control"
                id="depth"
                name="depth"
                min="0"
                step="0.01"
                placeholder="Nhập chiều sâu sản phẩm"
                value = product.dimensions.depth
            )

        div(class="form-group")
            label(for="warrenty") Chính sách bảo hành
            input(
                type="text"
                class="form-control"
                id="warrenty"
                name="warrenty"
                placeholder="Nhập thông tin bảo hành"
                value = product.warrantyInformation
            )

        div(class="form-group")
            label(for="inforShip") Thời gian giao hành
            input(
                type="text"
                class="form-control"
                id="inforShip"
                name="inforShip"
                placeholder="Nhập thời gian giao hàng"
                value = product.shippingInformation
            )
       
        div(class="form-group")
            label(for="returnPolicy") Thời gian đổi trả
            input(
                type="text"
                class="form-control"
                id="returnPolicy"
                name="returnPolicy"
                placeholder="Nhập thơi gian đổi trả"
                value = product.returnPolicy
            )

        div(class="form-group")
            label(for="minimumOrder") Số lượng đặt tối thiểu
            input(
                type="number"
                class="form-control"
                id="minimumOrder"
                name="minimumOrder"
                min="0"
                placeholder="Nhập số lượng đặt tối thiểu"
                value = product.minimumOrderQuantity
            )

        div(class="form-group")
            label(for="barCode") Barcode
            input(
                type="text"
                class="form-control"    
                id="barCode"
                name="barCode"
                placeholder="Nhập mã barcode"
                value = product.meta.barCode
            )

        div(class="form-group")
            label(for="qrCode") QR code
            input(
                type="text"
                class="form-control"
                id="qrCode"
                name="qrCode"
                placeholder="Nhập mã QR code"
                value = product.meta.qrCode
            )

        div(
            class="form-group upload-image"
        )
            label(for="images") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="images"
                name="images"
                accept="image/*"
            )
            img(
                src= product.images[0]
                alt="Your Image"
                class="preview-img"
                width="100px"
                height="auto"
            )

        div(
            class="form-group upload-image"
        )
            label(for="thumbnails") Thumbnails
            input(
                type="file"
                class="form-control-file"
                id="thumbnails"
                name="thumbnails"
                accept="image/*"
            )
            img(
                src= product.thumbnail 
                alt="Your thumbnails"
                class="preview-img"
                width="100px"
                height="auto"
            )

        button(
            type="submit"
            class="btn btn-primary"
            button-updated-product
        ) Cập nhật sản phẩm
 

